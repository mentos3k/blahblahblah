    const log = msg => document.getElementById("log").textContent += msg + "\n";
    const canvas = document.getElementById("glcanvas");
    const gl = canvas.getContext("webgl2");
    if (!gl) {
      log("âŒ WebGL2 not supported");
      throw new Error();
